{
  "manifest_version": 3,
  "name": "Zen Mode for X",
  "version": "1.0.0",
  "description": "Hide engagement metrics on Twitter",
  "permissions": ["storage"],
  "host_permissions": ["*://twitter.com/*", "*://x.com/*"],
  "content_scripts": [{
    "matches": ["*://twitter.com/*", "*://x.com/*"],
    "js": ["content/content.js"],
    "run_at": "document_start"
  }],
  "action": {
    "default_popup": "popup/popup.html"
  }
}
